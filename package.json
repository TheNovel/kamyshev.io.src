{
  "name": "kamyshev.me.src",
  "version": "2.0.0",
  "author": "Igor Kamyshev <igor@kamyshev.me>",
  "dependencies": {
    "clipboard-polyfill": "^2.8.6",
    "focus-visible": "^5.1.0",
    "smoothscroll-polyfill": "^0.4.4"
  },
  "devDependencies": {
    "@size-limit/file": "^4.4.5",
    "@solid-soda/scripts": "^1.19.1",
    "autoprefixer": "^9.7.6",
    "concurrently": "^5.1.0",
    "cyrillic-to-translit-js": "^3.1.0",
    "date-fns": "^2.11.1",
    "fs-extra": "^9.0.0",
    "jstransformer-markdown-it": "^2.1.0",
    "marked": "^0.8.2",
    "parcel-bundler": "^1.12.4",
    "postcss-color-mod-function": "^3.0.3",
    "postcss-custom-media": "^7.0.8",
    "postcss-nesting": "^7.0.1",
    "postcss-scrollbar": "^0.3.0",
    "pug": "^2.0.4",
    "readline": "^1.3.0",
    "rimraf": "^3.0.2",
    "size-limit": "^4.4.5",
    "yaspeller": "^6.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn soda lint-staged",
      "pre-push": "yarn soda lint && yarn size && yarn spell",
      "commit-msg": "yarn soda commitlint"
    }
  },
  "license": "MIT",
  "repository": "git@github.com:igorkamyshev/kamyshev.me.src.git",
  "scripts": {
    "build": "rimraf .cache && rimraf dist && parcel build src/pages/* && node postparcel.js",
    "ci": "yarn s lint && yarn size && yarn spell",
    "create-article": "node ./utils/create-article.js",
    "dev": "rimraf .cache && concurrently --kill-others \"parcel src/pages/index.pug\" \"parcel watch src/pages/articles.pug\"",
    "s": "yarn soda",
    "size": "yarn build && size-limit",
    "spell": "yaspeller ./data"
  },
  "size-limit": [
    {
      "limit": "6 KB",
      "path": "./dist/interactive.*.js"
    },
    {
      "limit": "3 KB",
      "path": "./dist/polyfills.*.js"
    }
  ]
}
