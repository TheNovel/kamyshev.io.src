{
  "name": "kamyshev.me.src",
  "version": "2.0.0",
  "author": "Igor Kamyshev <igor@kamyshev.me>",
  "dependencies": {
    "clipboard-polyfill": "^3.0.1",
    "focus-visible": "^5.1.0",
    "smoothscroll-polyfill": "^0.4.4"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^9.1.1",
    "@commitlint/cli": "^9.1.1",
    "@size-limit/file": "^4.5.5",
    "autoprefixer": "^9.8.5",
    "babel-eslint": "^10.1.0",
    "commitizen": "^4.1.2",
    "concurrently": "^5.2.0",
    "cyrillic-to-translit-js": "^3.1.0",
    "cz-conventional-changelog": "^3.1.0",
    "date-fns": "^2.15.0",
    "eslint": "^7.5.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-import-helpers": "^1.1.0",
    "eslint-plugin-unicorn": "^18.0.1",
    "fs-extra": "^9.0.1",
    "husky": "^4.2.5",
    "jstransformer-markdown-it": "^2.1.0",
    "lint-staged": "^10.2.11",
    "marked": "^1.1.1",
    "parcel-bundler": "^1.12.4",
    "postcss-color-mod-function": "^3.0.3",
    "postcss-custom-media": "^7.0.8",
    "postcss-nesting": "^7.0.1",
    "postcss-scrollbar": "^0.3.0",
    "prettier": "^2.0.5",
    "pug": "^3.0.0",
    "readline": "^1.3.0",
    "rimraf": "^3.0.2",
    "size-limit": "^4.5.5",
    "stylelint": "^13.6.1",
    "stylelint-config-recess-order": "^2.1.0",
    "stylelint-config-recommended": "^3.0.0",
    "yaspeller": "^7.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "license": "MIT",
  "repository": "git@github.com:igorkamyshev/kamyshev.me.src.git",
  "scripts": {
    "build": "rimraf .cache && rimraf dist && parcel build src/pages/* && node postparcel.js",
    "create-article": "node ./utils/create-article.js",
    "dev": "rimraf .cache && concurrently --kill-others \"parcel src/pages/index.pug\" \"parcel watch src/pages/articles.pug\"",
    "size": "yarn build && size-limit",
    "spell": "yaspeller ./data",
    "pretty": "prettier --write .",
    "commit": "git-cz",
    "lint:code": "eslint \"./**/*.{js,jsx}\"",
    "lint:styles": "stylelint \"./**/*.css\""
  },
  "size-limit": [
    {
      "limit": "6.1 KB",
      "path": "./dist/interactive.*.js"
    },
    {
      "limit": "2.8 KB",
      "path": "./dist/polyfills.*.js"
    }
  ],
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{tsx,ts,js,jsx,scss,css,js,json,md}": [
      "prettier --write"
    ]
  }
}
