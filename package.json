{
  "name": "kamyshev.me.src",
  "version": "2.0.0",
  "repository": "git@github.com:igorkamyshev/kamyshev.me.src.git",
  "author": "Igor Kamyshev <igor@kamyshev.me>",
  "license": "MIT",
  "scripts": {
    "build": "rimraf .cache && rimraf dist && parcel build src/pages/* && node postparcel.js",
    "dev": "rimraf .cache && concurrently --kill-others \"parcel src/pages/index.pug\" \"parcel watch src/pages/articles.pug\"",
    "s": "yarn soda",
    "size": "size-limit",
    "spell": "yaspeller ./src/data",
    "ci": "yarn s lint && yarn size && yarn spell"
  },
  "devDependencies": {
    "@solid-soda/scripts": "^1.2.4",
    "autoprefixer": "^9.5.0",
    "concurrently": "^4.1.0",
    "cyrillic-to-translit-js": "^2.1.0",
    "jstransformer-markdown-it": "^2.1.0",
    "marked": "^0.6.1",
    "parcel-bundler": "^1.12.3",
    "postcss-color-mod-function": "^3.0.3",
    "postcss-custom-media": "^7.0.7",
    "postcss-nesting": "^7.0.0",
    "postcss-scrollbar": "^0.3.0",
    "pug": "^2.0.3",
    "rimraf": "^2.6.3",
    "size-limit": "^1.0.0",
    "yaspeller": "^5.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn soda lint-staged && yarn size && yarn spell",
      "commit-msg": "yarn soda commitlint"
    }
  },
  "size-limit": [
    {
      "limit": "4 KB",
      "path": "./src/interactive/index.js"
    }
  ],
  "dependencies": {
    "clipboard-polyfill": "^2.7.0",
    "focus-visible": "^4.1.5",
    "intersection-observer": "^0.5.1",
    "smoothscroll-polyfill": "^0.4.3"
  }
}
